# Configuration to wordpress

server {
        # listen to default port 80
        listen 80 default_server;
        listen [::]:80 default_server;

        # Default path to listen web files
        root /var/www/html/wordpress;

        # file type to list
        index index.php index.html index.htm;

        # Domaine name
        server_name _;

       # SSL
       # ssl on;
       # ssl_certificate /etc/ssl/certs/${SSL_CERTIFICAT};
       # ssl_certificate_key /etc/ssl/private/${SSL_PRIVATE_KEY};

        location / {
                # First attempt to serve request as file, then
                try_files $uri $uri/ /index.php?url=$args;
        }

        # wordpress
        if (!-e $request_filename) {
          rewrite /wp-admin$ $scheme://$host$uri/ permanent;
          rewrite ^/[_0-9a-zA-Z-]+(/wp-.*) $1 last;
          rewrite ^/[_0-9a-zA-Z-]+(/.*\.php)$ $1 last;
        }

        # listen php7.0-fpm
        location ~ \.php$ {
                # With php7.0-fpm:

                try_files $uri =404;

                include /etc/nginx/fastcgi_params;

                fastcgi_index index.php;
                fastcgi_pass unix:/run/php/php7.0-fpm.sock;
                fastcgi_split_path_info ^(.+\.php)(/.+)$;
                fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
        }
}
